package com.shelter.shelter_api.DTO;

import com.fasterxml.jackson.annotation.JsonProperty;
import com.shelter.shelter_api.Entity.ColdShelterEntity;
import lombok.*;

@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class ColdShelterDTO {

    @JsonProperty("REARE_FCLT_NO")
    private Long id;

    @JsonProperty("REARE_NM")
    private String name;

    @JsonProperty("DADDR")
    private String address;

    @JsonProperty("RONA_DADDR")
    private String roadAddress;

    @JsonProperty("UTZTN_PSBLTY_TNOP")
    private Integer capacity;

    @JsonProperty("MDFCN_HR")
    private String modifiedAt;

    @JsonProperty("RMRK")
    private String remark;

    @JsonProperty("WKDY_OPER_BGNG_HR")
    private String weekdayStart;

    @JsonProperty("WKDY_OPER_END_HR")
    private String weekdayEnd;

    @JsonProperty("STDY_OPER_BGNG_HR")
    private String saturdayStart;

    @JsonProperty("STDY_OPER_END_HR")
    private String saturdayEnd;

    @JsonProperty("SNDY_OPER_BGNG_HR")
    private String sundayStart;

    @JsonProperty("SNDY_OPER_END_HR")
    private String sundayEnd;

    @JsonProperty("LHLDY_OPER_BGNG_HR")
    private String holidayStart;

    @JsonProperty("LHLDY_OPER_END_HR")
    private String holidayEnd;

    @JsonProperty("FCLT_TYPE")
    private String facilityType;

    @JsonProperty("FCLTY_SCLAS")
    private String facilitySubType;

    @JsonProperty("LAT")
    private Double lat;

    @JsonProperty("LOT")
    private Double lng;

    public ColdShelterEntity toEntity() {
        return ColdShelterEntity.builder()
                .id(id)
                .name(name)
                .address(address)
                .roadAddress(roadAddress)
                .capacity(capacity)
                .modifiedAt(modifiedAt)
                .remark(remark)
                .weekdayStart(weekdayStart)
                .weekdayEnd(weekdayEnd)
                .saturdayStart(saturdayStart)
                .saturdayEnd(saturdayEnd)
                .sundayStart(sundayStart)
                .sundayEnd(sundayEnd)
                .holidayStart(holidayStart)
                .holidayEnd(holidayEnd)
                .facilityType(facilityType)
                .facilitySubType(facilitySubType)
                .lat(lat)
                .lng(lng)
                .build();
    }
}

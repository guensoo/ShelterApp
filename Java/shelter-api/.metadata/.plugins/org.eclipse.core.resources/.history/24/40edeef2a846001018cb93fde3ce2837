package com.shelter.shelter_api.Entity;

import jakarta.persistence.Entity;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Entity
@Table(name = "cold_shelter")
@Getter
@Setter
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class ColdShelterEntity {

    @Id
    private Long id;  // REARE_FCLT_NO (고유번호)

    private String name;            // REARE_NM
    private String address;         // DADDR
    private String roadAddress;     // RONA_DADDR
    private Integer capacity;       // UTZTN_PSBLTY_TNOP
    private String modifiedAt;      // MDFCN_HR
    private String remark;          // RMRK

    private String weekdayStart;    // WKDY_OPER_BGNG_HR
    private String weekdayEnd;      // WKDY_OPER_END_HR
    private String saturdayStart;   // STDY_OPER_BGNG_HR
    private String saturdayEnd;     // STDY_OPER_END_HR
    private String sundayStart;     // SNDY_OPER_BGNG_HR
    private String sundayEnd;       // SNDY_OPER_END_HR
    private String holidayStart;    // LHLDY_OPER_BGNG_HR
    private String holidayEnd;      // LHLDY_OPER_END_HR

    private String facilityType;    // FCLT_TYPE
    private String facilitySubType; // FCLTY_SCLAS

    private Double lat;             // LAT
    private Double lng;             // LOT
}
